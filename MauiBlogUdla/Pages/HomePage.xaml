<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBlogUdla.Pages.HomePage"
             Title="HomePrincipalPage"
             NavigationPage.HasNavigationBar="False"
             >

    <Grid RowDefinitions=".3*,.4*" Margin="0">
        <Image Aspect="AspectFill" Source="https://arquitecturapanamericana.com/wp-content/uploads/2017/03/FOTOGRAFIA-SELECCIONADA-106.jpg"></Image>
        <Grid BackgroundColor="White"
              
         Opacity=".20"  >

        </Grid>
        <Grid Grid.Row="1">

            <RoundRectangle Margin="-5,-20,-5,-2"
                            CornerRadius="30,30,0,0"
                            Fill="white"/>
            <Image Aspect="AspectFit"
                    HeightRequest="85" Margin="5,-380,-5,-2"
                    Source="https://media.primicias.ec/2022/02/04094454/RGB_LOGO-UDLA_2021_ROJO.png"
            />
            <VerticalStackLayout Margin="90,80,90,0" HorizontalOptions="Center" >
                <Label FontAttributes="Bold"
                       WidthRequest="233"
                       HeightRequest="70"
                       FontFamily="PoppinsBold"
                       FontSize="Title"
                       Text="Bienvenido a SocialUdla!"
                       TextColor="Black"
                       HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                        Margin="0,0,0,25"
                       />

                <Label FontFamily="PoppinsMedium"
                       FontSize="Header"
                       Text="Para poder ingresar debes Iniciar Sesión"
                       TextColor="DarkSlateGrey"
                       HeightRequest="24"
                       WidthRequest="324"
                       HorizontalOptions="Center" 
                      HorizontalTextAlignment="Center"
                        
                        Margin="0,0,0,30"
                />
                <Button BackgroundColor="#8D2232"
                        WidthRequest="350"
                        HeightRequest="75"
                        FontFamily="PoppinsSemiBold" 
                        FontSize="Medium"
                        Text="Iniciar Sesión"
                        Clicked="ClickLogin"
                        TextColor="White"
                        Margin="0,0,0,20"
                         
                        >
                </Button>

                <Label FontFamily="PoppinsMedium"
                    FontSize="Small"
                    Text="¿No tienes una cuenta?"
                    TextColor="Grey"
                    HorizontalOptions="CenterAndExpand" 
                     Margin="0,0,0,2"

                   />



                <StackLayout>
                    <Grid BackgroundColor="Transparent"
              WidthRequest="350"
              HeightRequest="40"
              Margin="0,0,0,40">
                        <Label Text="Registrate"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   FontFamily="PoppinsMedium"
                   FontSize="13"
                   TextColor="DarkSlateGrey"
                   TextDecorations="Underline" />
                        <Button BackgroundColor="Transparent"
                    Clicked="ClickRegistro"
                    WidthRequest="350"
                    HeightRequest="40" />
                    </Grid>
                </StackLayout>
            </VerticalStackLayout>



        </Grid>

    </Grid>
</ContentPage>